<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanFailFragment">

    <include
        android:id="@+id/titlelayout"
        layout="@layout/title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/share_layout"
        android:layout_width="match_parent"
        android:layout_height="61.33dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10.67dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlelayout">


        <View
            android:id="@+id/share_icon"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/share_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="给他人共享该设备的信息"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/share_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="5dp"
            android:layout_height="7.67dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/show_layout"
        android:layout_width="match_parent"
        android:layout_height="61.33dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15.33dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_layout">


        <View
            android:id="@+id/show_icon"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/show_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="查看他人共享设备的信息"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/show_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="5dp"
            android:layout_height="7.67dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>